500px; margin: 0 auto; padding: 
20px; font-family: Arial, sans-
serif; 
} 
.form -group { margin-
bottom: 15px; 
} label 
{ 
display: block; 
margin-bottom: 5px; 
font-weight: bold; 
} input, select { width: 
100%; padding: 8px; 
border: 1px solid #ddd; 
border-radius: 4px; box-
sizing: border-box; 
} 
button 
{ 
padding: 10px 15px; 
background-color: 
#4CAF50; color: white; 
border: none; border-
radius: 4px; cursor: 
pointer;
} button:disabled 
{ 
background-color: #cccccc; cursor: 
not-allowed; 
} 
.error { 
color: red; 
font-size: 12px; 
margin-top: 5px; 
} input.ng-invalid.ng-touched 
{ 
border: 1px solid red; 
} 
.success -message { 
color: green; font-
weight: bold; margin-
top: 15px; 
} 
